@model IEnumerable<SearchResult>
<script src="~/js/Search.js"></script>
<div class="container">
    <div class="row">
        <h1>Browser</h1>
        <form id="confirmSearch" method="get">
            <div class="input-group">
                <input id="searchTerm" type="text" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <br />
        @if (Model.Any())
        {
            <div class="container">
                <div class="col-lg-3 col-lg-push-1">
                    <h1>Artists <a href="#" class="badge">See all</a></h1>
                    <table class="table table-responsive table-hover">
                        <tbody>
                        @foreach (SearchResult searchResult in Model)
                        {
                            if (searchResult.TableName.Contains("Artist"))
                            {
                                <tr>
                                    <td>
                                        <a href="#">@searchResult.Name</a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-3 col-lg-push-1">
                    <h1>Playlists <a href="#" class="badge">See all</a></h1>
                    <table class="table table-responsive table-hover">
                        <tbody>
                        @foreach (SearchResult searchResult in Model)
                        {
                            if (searchResult.TableName.Contains("Playlist"))
                            {
                                <tr>
                                    <td>
                                        <a href="#">@searchResult.Name</a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-3 col-lg-push-1">
                    <h1>Songs <a href="#" class="badge">See all</a></h1>
                    <table class="table table-responsive table-hover">
                        <tbody>
                        @foreach (SearchResult searchResult in Model)
                        {
                            if (searchResult.TableName.Contains("Song"))
                            {
                                <tr>
                                    <td>
                                        <div class="dropdown">
                                            <a class="searchSongResult dropdown-toggle" resource="@searchResult.Name" data-toggle="dropdown">@searchResult.Name</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="addSongToPlaylist" resource="@searchResult.ID" tabindex="-1" href="#">Add to playlist</a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <h1>No search </h1>
        }
    </div>
</div>
